# CerebraFlow Environment Example
# ------------------------------------------------------------------
# Copy this file to `.env` and fill in the required values.
# The one-touch installer will back up any existing `.env` and append
# missing keys from this template without overwriting your secrets.

# ==================== SUPABASE CONFIGURATION ====================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="CHANGE_ME"
SUPABASE_SERVICE_ROLE_KEY="CHANGE_ME"
SUPABASE_PROJECT_REF="your-project-ref"
SUPABASE_ACCESS_TOKEN=""
SUPABASE_DB_PASS=""
SUPABASE_DB_URL="postgresql://postgres:[SUPABASE_DB_PASS]@your-project.supabase.co:5432/postgres"
SUPABASE_CLI_PAT=""
SUPABASE_REALTIME_ENABLED=true

# ==================== CEREBRAL PLATFORM IDs ====================
CEREBRAL_TENANT_ID="00000000-0000-0000-0000-000000000000"
CEREBRAL_USER_ID="00000000-0000-0000-0000-000000000000"
CEREBRAL_USER_EMAIL=""
CEREBRAL_USER_PASSWORD=""

# ==================== AI PROVIDER CONFIGURATION ====================
ANTHROPIC_API_KEY=""
OPENAI_API_KEY=""
PERPLEXITY_API_KEY=""
GEMINI_API_KEY=""
OPENROUTER_API_KEY=""

# ==================== MCP SERVER CONFIGURATION ====================
MCP_TOOL_MODE="consolidated"
MCP_SERVER_PORT=3001
MCP_LOG_LEVEL="info"
MCP_SERVER_HOST="localhost"
CURSOR_OPTIMIZATION="true"
CONSOLIDATED_MODE_ENABLED="true"

# ==================== SYNCHRONIZATION CONFIGURATION ====================
CEREBRAFLOW_AUTO_SYNC=true
CEREBRAFLOW_SYNC_INTERVAL=300
CEREBRAFLOW_CONFLICT_RESOLUTION="database_wins"
CEREBRAFLOW_BACKUP_ENABLED=true
CEREBRAFLOW_BACKUP_INTERVAL=3600
CEREBRAFLOW_BACKUP_RETENTION_DAYS=30

# ==================== LOGGING CONFIGURATION ====================
CEREBRAFLOW_LOG_LEVEL="info"

# ==================== JWT CONFIGURATION ====================
JWT_SECRET_KEY="CHANGE_ME"

# ==================== EDGE FUNCTION CONFIGURATION ====================
CEREBRAFLOW_TASK_SYNC_URL=""
CEREBRAFLOW_AUTH_VALIDATION_URL=""
CEREBRAFLOW_PLUGIN_DOWNLOAD_URL=""

# ==================== OPTIONAL INTEGRATIONS ====================
CLOUDFLARE_API_TOKEN=""
CLOUDFLARE_ACCOUNT_ID=""
CLOUDFLARE_ZONE_NAME=""
CLOUDFLARE_ZONE_ID=""

# ==================== GITHUB / REGISTRY ====================
GH_PAT=""
GH_TOKEN=""
GHCR_USER=""
REGISTRY_USERNAME=""
REGISTRY_PASSWORD=""

# ==================== VAULT CONFIGURATION ====================
VAULT_ADDR="http://vault.your-domain.local:8200"
VAULT_DEV_ROOT_TOKEN_ID=""
VAULT_ADMIN_USERNAME=""
VAULT_ADMIN_PASSWORD=""

# ==================== TELEPHONY (TWILIO) ====================
TEST_SID=""
TEST_AuthToken=""
API_SID=""
API_AuthToken=""
LIVE_SID=""
LIVE_AuthToken=""

# Add any additional environment keys your deployment requires below.
